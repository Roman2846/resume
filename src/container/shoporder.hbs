<main class='p-5'>
  {{#with navigation}}
    <section>
      <div class='row mb-4'>
        {{#each links}}
          <div class='col-2'>
            <div class='nav'>
              <div class='nav-item'>
                <a
                  href='{{href}}'
                  class='nav-link {{#if @last}} disabled {{/if}}'
                >{{text}}</a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </section>
  {{/with}}
    
<div class="row">
  <div class="col-8 mb-4">
    <div class="mb-3">
    <h1>{{header}}</h1>
    <br>
    {{#with contacts_data}}
    <h2 class="mb-3">{{title}}</h2>
    {{#each buttons}}
        {{#if isPrimary}}<button class="btn btn-warning text-light ">{{text}}</button> {{/if}}
        {{#if isOutline}}<button class="btn btn-outline-warning">{{text}}</button> {{/if}}
    {{/each}}
    </div>


    {{#with form}}
    {{#with input}}
        <div class="row g-2">
            {{#with surname}}
            <div class="col-6">
                <label class="form-label">{{label}}</label>
                <input class="form-control"placeholder={{placeholder}}>
                <div class="form-text text-dark">{{caption}}</div>
            </div>
            {{/with}}
            {{#with name}}
            <div class="col-6">
                <label class="form-label">{{label}}</label>
                <input class="form-control"placeholder={{placeholder}}>
                <div class="form-text text-dark">{{caption}}</div>
            </div>
            {{/with}}
            {{#with phone}}
            <div class="col-6">
                <label class="form-label">{{label}}</label>
                <input class="form-control"placeholder={{placeholder}}>
                <div class="form-text text-dark">{{caption}}</div>
            </div>
            {{/with}}
            {{#with email}}
            <div class="col-6">
                <label class="form-label">{{label}}</label>
                <input class="form-control"placeholder={{placeholder}}>
                <div class="form-text text-dark">{{caption}}</div>
            </div>
            {{/with}}
        </div>
    {{/with}}

    <hr class="my-3">

    {{#each switch}} 
        <div class="form-check form-switch my-1">
            <input class="form-check-input" type="checkbox" {{#if isActive}} checked {{/if}}>
            <label class="form-check-label">{{text}}</label>
        </div> 
    {{/each}}
    {{/with}}
    {{/with}}
    
    <hr>

    {{#with delivery}}
    <h2 class="mb-3">{{title}}</h2>
    <div class="card mb-4">
        <div class="card-body row">
        {{#each select}}
            <div class="col-6">
                <label class="form-label">{{label}}</label>
                <select class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
        {{/each}}
        </div>
    </div>
    
    {{#each delivery_type}}
        <div class="form-check">
            <label class="form-check-label">{{type}}</label>
            <input class="form-check-input" type="radio" name="#" {{#if @first}} checked {{/if}}>
        </div>
    {{/each}}

    <hr>

    <div>
        {{#with payment}}
        <h2>{{title}}</h2>
            {{#each list}}
                <div class="form-check">
                    <label class="form-check-label">{{type}}</label>
                    <input class="form-check-input" type="radio" name="1" {{#if @first}} checked {{/if}}>
                    <div class="form-text text-dark">{{description}}</div>
                </div>
            {{/each}}
        {{/with}}
    </div>

    <hr>

    <div>
        {{#with contact}}
        <h2>{{title}}</h2>
            <div class="row g-2">
            {{#with surname}}
            <div class="col-6">
                <label class="form-label">{{label}}</label>
                <input class="form-control"placeholder={{placeholder}}>
                <div class="form-text text-dark">{{caption}}</div>
            </div>
            {{/with}}
            {{#with name}}
            <div class="col-6">
                <label class="form-label">{{label}}</label>
                <input class="form-control"placeholder={{placeholder}}>
                <div class="form-text text-dark">{{caption}}</div>
            </div>
            {{/with}}
            {{#with phone}}
            <div class="col-6">
                <label class="form-label">{{label}}</label>
                <input class="form-control"placeholder={{placeholder}}>
                <div class="form-text text-dark">{{caption}}</div>
            </div>
            {{/with}}
            {{#with email}}
            <div class="col-6">
                <label class="form-label">{{label}}</label>
                <input class="form-control"placeholder={{placeholder}}>
                <div class="form-text text-dark">{{caption}}</div>
            </div>
            {{/with}}
            </div>
        {{/with}}
    </div>

    <hr>

    <div>
        {{#with coment}}
        <label class="form-label">{{label}}</label>
        <input class="form-control" type="text" placeholder={{placeholder}}>
        {{/with}}
    </div>
    {{/with}}

    <hr>

    <div>
        {{#with coupon}}
        <h2>{{title}}</h2>
            {{#with select}}
                {{#with availabel_coupon}}
                    <div class="col-12 mb-3">
                        <label class="form-label">{{label}}</label>
                        <select class="form-select form-select-lg">
                                <option>{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                        </select>
                    </div>
                {{/with}}

                {{#with friend_coupon}}
                    <div class="col-12 mb-3">
                        <label class="form-label">{{label}}</label>
                        <select class="form-select form-select-sm">
                                <option>{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                        </select>
                    </div>
                {{/with}}
            {{/with}}

            {{#with add}}
                {{#with friend}}
                    <div class="col-12 mb-3">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control form-control-lg"placeholder={{placeholder}}>
                        <div class="form-text text-dark">{{caption}}</div>
                    </div>
                {{/with}}

                {{#with colleague}}
                    <div class="col-12">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control form-control-sm"placeholder={{placeholder}}>
                        <div class="form-text text-dark">{{caption}}</div>
                    </div>
                {{/with}}
            {{/with}}
        {{/with}}
    </div>

    <hr>

    {{#with quiz}}
        <h2>{{title}}</h2>
        {{#with preference}}
        <h6>{{title}}</h6>
            {{#each options}}
                <div class="form-check mb-2">
                    <label class="form-check-label">{{this}}</label>
                    <input class="form-check-input" type="radio" name="2" {{#if @first}} checked {{/if}}>
                </div>
            {{/each}}
        {{/with}}
        <div class="mb-3">
            {{#with your_expirience}}
                <label class="form-label">{{label}}</label>
                <input class="form-control">
            {{/with}}
        </div>

        <div class="mb-3">
            {{#with purchase_frequency}}
                <label class="form-label">{{label}}</label>
                <select class="form-select">
                    <option>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            {{/with}}
        </div>

        {{#with factors}}
        <h6>{{title}}</h6>
            {{#each options}}
                <div class="form-check">
                    <label class="form-check-label">{{this}}</label>
                    <input name="11" type="checkbox" class="form-check-input" {{#if @first}} checked {{/if}}>
                </div>
            {{/each}}
        {{/with}}
    {{/with}}
  </div>
  
    <div class="col-4">
        <div class="mb-3">
            {{#each action_block}}
                <div class="my-2">
                    {{#if isSuccess}}<button class="btn btn-success text-light">{{text}}</button> {{/if}}
                    {{#if isDanger}}<button class="btn btn-danger text-light">{{text}}</button> {{/if}}
                    {{#if isInfo}}<button class="btn btn-info text-light">{{text}}</button> {{/if}}
                </div>
            {{/each}}
        </div>

        {{#with total}}
            <div class="card">
                <div class="card-body">
                    <h2>{{title}}</h2>
                    {{#each item_list}}
                        <p>{{name}}: {{price}}</p>
                    {{/each}}

                    <hr>

                    {{#each additional_info}}
                        <p>{{text}}: {{value}}</p>
                    {{/each}}

                    <hr>

                    {{#each button}}
                         <button class="d-flex my-2 btn {{#if isPrimary}}btn-primary{{/if}} {{#if isOutline}}btn-outline-primary{{/if}}">{{text}}</button>
                    {{/each}}
                </div>
            </div>
        {{/with}}
    </div>

    <hr>

    <div class="row g-1">
    {{#each footer}}
        <div class="nav col-2">
            <div>
                {{#each this}}
                    <div>
                        <a class="nav-link {{#if @last}} disabled {{/if}}"  href="{{this.link}}">{{this.text}}</a>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/each}}
    </div>
</div>


</main>